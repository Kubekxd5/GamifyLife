<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp"
    app:strokeColor="@color/black"
    app:strokeWidth="5dp"
    android:theme="@style/Theme.GamifyLife.Widget">

    <TextView
        android:id="@+id/widget_title_textview"
        style="@style/Widget.GamifyLife.TextView.Title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxLines="2"
    android:ellipsize="end"
    tools:text="PanTester's Achievements Today" />

    <TextView
        android:id="@+id/widget_content_textview"
        style="@style/Widget.GamifyLife.TextView.Content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:maxLines="2"
    android:ellipsize="end"
    tools:text="3 pending achievements waiting for you to complete them!" />

    <TextView
        android:id="@+id/widget_empty_textview"
        style="@style/Widget.GamifyLife.TextView.Content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:visibility="gone"
    tools:text="Log in to see your tasks!"
    tools:visibility="visible"/>

    <TextView
        android:id="@+id/widget_last_updated_textview"
        style="@style/Widget.GamifyLife.TextView.Caption"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:gravity="end"
    tools:text="Updated: 10:30 AM" />
</LinearLayout>